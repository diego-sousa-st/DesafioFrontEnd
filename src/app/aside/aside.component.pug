				#menu.d-flex.flex-column.align-items-end
					a.menu-item.d-flex.justify-content-between.p-2
						span.mr-2 Gestão de Estoque
						i.fa.fa-fw.fa-cubes
					a.menu-item.d-flex.justify-content-between.p-2
						span.mr-2 Gestão de Pessoas
						i.fa.fa-fw.fa-users
					a.menu-item.d-flex.justify-content-between.p-2
						span.mr-2 Gestão de Processos
						i.fa.fa-fw.fa-gears
					a.menu-item.d-flex.justify-content-between.p-2
						span.mr-2 Gestão de Projeções
						i.fa.fa-fw.fa-line-chart
					a.menu-item.d-flex.justify-content-between.p-2
						span.mr-2 Gestão de Relatórios
						i.fa.fa-fw.fa-file-text
					a.menu-item.d-flex.justify-content-between.p-2
						span.mr-2 Balanço Financeiro
