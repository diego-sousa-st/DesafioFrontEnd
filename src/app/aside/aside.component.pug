						i.fa.fa-fw.fa-line-chart
					a.menu-item.d-flex.justify-content-center.p-2(title='Gestão de Relatórios', alt='Gestão de Relatórios')
						i.fa.fa-fw.fa-file-text
					a.menu-item.d-flex.justify-content-center.p-2(title='Balanço Financeiro', alt='Balanço Financeiro')
						i.fa.fa-fw.fa-dollar
					a.d-flex.align-self-end.mt-auto.chevron(mat-button='', (click)='toggle()')
						i.fa.fa-chevron-right
				#content-area.d-block.float-left
					app-principal
